{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "strict": true,
    "checkJs": false,
    "allowJs": true,
    "sourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom", "dom.iterable"],
    "target": "ESNext"
  },
  "include": ["src/**/*", "lib/**/*"]
}
